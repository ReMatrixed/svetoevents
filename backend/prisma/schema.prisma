generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DB_BOUNCER_URL")
  directUrl = env("DB_DIRECT_URL")
}

model Event {
  id          String   @id @default(uuid()) @db.Uuid
  title       String
  description String
  date        DateTime @db.Timestamp(3)
  category    String
  rating      Int      @db.SmallInt
  location    String
  image       String
  on_edit     Boolean

  @@map(name: "events")
}